/* pages/Activity/release/release.wxss */
.input-field {
    width: 95%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.input-title {
    margin: 5rpx 0 5rpx 20rpx;
}

.input-frame {
    margin: 5rpx 0;
    box-shadow: 0 5px 10px -5px #c9dfd9;
}

van-field view.van-cell {
    border-radius: 20rpx;
}

.upload {
    width: 100%;
    margin: 10rpx 0 0 40rpx;
}

.upload image {
    width: 130rpx;
    height: 100rpx;
    margin: 10rpx;
    box-shadow: 0 5px 10px -5px rgba(70, 69, 69, 0.5);
}

.submit {
    width: 200rpx;
}