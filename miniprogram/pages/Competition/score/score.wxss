/* pages/Competition/score/score.wxss */
page {
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.head {
    width: 100%;
    height: 10%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    font-size: large;
    font-weight: bold;
    background-color: #f5f5f5;
}

.divider {
    width: 100%;
    height: 1px;
    background-color: black;
}

.clockfield {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    font-size: large;
    margin-top: 20rpx;
}

.clock {
    width: 440rpx;
    height: 440rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    border: thin solid black;
    border-radius: 220rpx;
    margin-top: 15rpx;
}

.item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 160rpx;
    height: 160rpx;
    margin: 0 15rpx;
    color: #fff;
    font-size: 60rpx;
    text-align: center;
    background-color: #1989fa;
    border-radius: 20rpx;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,.5);
}

.score {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.scoretable {
    width: 90%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin: 15rpx 0;
}

.scoreitem {
    height: 200rpx;
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: solid thin #f5f5f5;
    border-radius: 20rpx;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,.5);
    font-size: larger;
    font-weight: bold;
    margin-top: 20rpx;
}

.vers {
    font-size: large;
    font-weight: bold;
}

.submit {
    width: 90%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
