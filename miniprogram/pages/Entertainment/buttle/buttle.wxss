/* pages/Entertainment/buttle/buttle.wxss */
page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.front {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 5rpx 0; 
}

.chatfield {
    width: 96%;
    margin: 10rpx;
}

.user-message {
    width: 100%;
    display: flex;
    align-items: flex-start;
    margin: 20rpx 0;
}

.userinfo-avatar {
    width: 80rpx;
    height: 80rpx;
    background-color: red;
    overflow: hidden;
    border-radius: 40rpx;
    border: thin solid whitesmoke;
}

.avatarimg {
    width: 80rpx;
    height: 80rpx;
}

.messtext {
    max-width: 80%;
    min-height: 75rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 10rpx;
    padding: 0 10rpx;
    border-radius: 10rpx;
    font-size: 35rpx;
}

.matchfiled {
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    margin-top: 30rpx;
}

.battle {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10rpx;
    margin: 20rpx 0;
    padding: 10rpx 0;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,.5);
}

.battle-name {
    width: 90%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin: 20rpx 0;
}

.nametext {
    width: 40%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    font-size: large;
    font-weight: bold;
}

.than {
    width: 20%;
    text-align: center;
}

.rankfield {
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    border-radius: 10rpx;
    margin-top: 20rpx;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,.5);
}

.rankitem {
    width: 30%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin: 10rpx 0;
}

.rankimg {
    width: 50rpx;
    height: 50rpx;
    border-radius: 10rpx;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,.5);
}

.inputfield {
    width: 100%;
    height: 17%;
    background-color: #f5f5f5;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.inputframe {
    width: 100%;
    height: 45%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    border-radius: 10rpx;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,.5);
}

.inputbox {
    width: 78%;
    height: 80%;
    background-color: white;
    padding: 0 8rpx;
    border-radius: 5rpx;
}

.inputframe button {
    width: 90rpx;
    height: 65rpx;
    font-size: small;
    margin: 0;
    padding: 0;
}

.show {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin-top: 20rpx;
}

.imgbox {
    border-radius: 10rpx;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,.5);
    background-color: white;
}

.imgicon {
    width: 100rpx;
    height: 100rpx;
}