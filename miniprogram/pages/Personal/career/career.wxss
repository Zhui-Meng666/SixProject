  }
  .actdate{
    margin-left: 20px;
    align-items: center;
    font-size: 15px;
    width: 150px;
    height: 50px;
    /* color: gray; */
  }

  .level{
    width: 100px;
    height: 30px;
    font-family: "Heiti";
    font-size: 15px;
    border-style:groove;
    border-color: #607D8B;
    border-width: 2px;
    margin-left: 13px;
    margin-top: 10px;
  }
  .acmsg{
    font-size: 15px;
    font-family: 'Songti';
    margin-top: auto;
    margin-bottom: auto;
  }

  .search {
    width: 98%;
