/* pages/Personal/like/like.wxss */
page {
    width: 100%;
    height: 100%;
}

.front {
    width: 100%;
    height: 130rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    border: thin solid #515c5d;
}

.videonum {
    width: 20%;
    font-size: small;
    background-color: #FAFAFB;
    border: thin solid #515c5d;
    border-radius: 8%;
    text-align: center;
    padding: 15rpx 0;
}

.search {
    width: 70%;
}

.likelist {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.likeitem {
    width: 32.8%;
    border: thin solid whitesmoke;
}

.image {
    width: 100%;
    height: 100%;
}