/* miniprogram/pages/Personal/main/main.wxss */
page {
    width: 100%;
    height: 100%;
}

.front {
    width: 100%;
    height: 35%;
    background-color: #a2cba3;
    display: flex;
    flex-direction: row-reverse;
}

.setupfield {
    display: flex;
    flex-direction: row-reverse;
}

.setup {
    width: 75rpx;
    height: 100%;
    margin: 6rpx 12rpx 0 0;
}

.setupicon {
    width: 75rpx;
    height: 75rpx;
}

.mid {
    width: 100%;
    height: 15%;
    margin-top: -15%;
    display: flex;
    flex-direction: row;
}

.avatarfield {
    flex-grow: 2;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.userinfo-avatar {
    width: 130rpx;
    height: 130rpx;
    overflow: hidden;
    display: block;
    margin-left: 8%;
    border-radius: 50%;
    border: 3rpx solid #a2cba3;
}

.userinfofield {
    flex-grow: 6;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;
}

.userinfoname {
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    margin-bottom: 25rpx;
}

.gender {
    margin-left: 8rpx;
}

.genderimg {
    width: 50rpx;
    height: 50rpx;
}

.userinfo-nickname {
    font-size: 32rpx;
    margin-bottom: 5rpx;
}

.introduction {
    flex-grow: 1;
    font-size: small;
}

.coinfield {
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
}

.coin-image {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 46%;
}

.coin-number {
    margin-bottom: 50%;
    margin-left: 5rpx;
}

.coinimg {
    width: 50rpx;
    height: 50rpx;
}

.tail {
    width: 100%;
    height: 65%;
    background-color: #fafafb;
    margin-top: -15%;
}

.identifield {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    height: 80rpx;
    position: relative;
    top: 10%;
}

.iconimg {
    width: 60rpx;
    height: 60rpx;
}

.levelfield {
    position: relative;
    top: 10%;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.levelshow {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.progress {
    width: 70%;
}

.level-image {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.level-text {
    margin-left: 10rpx;
}

.listfield {
    height: 200rpx;
    position: relative;
    top: 10%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    border: thin solid #515c5d;
    border-radius: 15rpx;
    margin: 3rpx 10rpx;
    background-color: white;
}

.listshow {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.listicon {
    width: 90rpx;
    height: 90rpx;
}

.listtext {
    text-align: center;
}

.photofield {
    height: 200rpx;
    position: relative;
    top: 10%;
    border: thin solid #515c5d;
    border-radius: 15rpx;
    margin: 10rpx;
    background-color: white;
}

.photolist {
    width: 100%;
    margin: 20rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.photoimg {
    width: 120rpx;
    height: 120rpx;
}

.phototext {
    font-size: small;
    margin: 5rpx 10rpx;
}

.feedfield {
    position: relative;
    top: 10%;
    margin: 10rpx 5rpx;
    border-bottom: thin solid #515c5d;
    border-radius: 15rpx;
}

button {
    text-align: left;
    background-color: white;
}

.pop {
    height: 80px;
    width: 348px;
}

.checkbox {
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    align-items: stretch;
    margin: 0 8.5%;
}

.checkitem {
    margin: 10px 0;
}