<!--pages/Personal/photolist/photolist.wxml-->

<!-- <image src="../../../images/Cat.jpeg" class="background"></image> -->

<view class="container" style="background-image: url({{bgimg}});">
    <view class="row">
        <view class="picnum">
            照片:{{num}}
        </view>
        <view wx:if="{{adjust == false}}">
            <view class="org" bindtap="org">
            删除图片
            </view>
        </view>
        <view wx:if="{{adjust == true}}">
            <view class="org" bindtap="org">
            完成(单击图片删除)
            </view>
        </view>
    </view>
</view>

<view class="pics">
    <image src="../../../images/add-pic.png" class="box" bindtap="uploadimg"></image>
    <view wx:for="{{imgs}}">
        <image src="{{item.picture_link}}" class="box"  data-index="{{index}}" bindtap="del"></image>
    </view>
</view>