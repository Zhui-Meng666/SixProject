/* miniprogram/pages/index/index.wxss */
page{
    background-color: #FAFAFB;
}
.icon_class{
    margin-top: 25rpx;
    height: 40rpx;
    width: 50rpx;
}
.swiper_container{
    height: 240rpx;
    width: 99%;
    margin: auto;
}

.swiper_item{
    font-size: 17px;
    position: absolute;
    margin: auto;
    top: 180rpx;
    color: white;
    left: 15rpx;
}
.search {
    width: 98%;
    /* position: fixed; */
    right: 30px;
}

.videos{
    width: 100%;
    height: 790rpx;
    display: flex;
    align-content: flex-start;
    flex-direction: row;
    margin: auto;
    margin-left: 3px;
    background-color: #fafafb;
}
.video{
    width: 50%;
    height: 500rpx;
    display: inline-block;
}
.v_cover{
    width: 365rpx;
    height: 500rpx;
    margin-bottom: -95rpx;
}
.v_name{
    position: relative;
    left: 20rpx;
    top: -25rpx;
    color: white;
    font-family: "heiti";
    font-size: 50rpx;
}
.v_detail{
    position: relative;
    left: 16rpx;
    top: -25rpx;
    width: 300rpx;
    color: white;
    font-size: 30rpx;
}

.bottom{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 40px;
    position: relative;
    /* bottom: -70px; */
    left: 40px;
}

.bottom_img{
    height: 30px;
    width: 30px;
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: -24px;
    /* position: fixed; */
    bottom: 0px;
}

.bottom_list{
    margin-bottom: 0px;
    align-items: center;
    margin-left: 5px;
}

.news_img{
    width: 100%;
}